<% include ../partials/header %>
<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
<div id="container" class="quiz">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h4>Question: <%= quiz.questions[num].question %></h4>
            <p></p>
            <form id="questionBox" method="post" action="/play/quiz/<%= quiz._id %>/process">
                <% var acount = 0;%>
                <% quiz.questions[num].answers.answer.forEach(function(a) { %>
                <ul>
                    <li><input type="radio" id="answer<%= acount %>" value="<%= a %>" name="answers" />
                    <label for="answer<%= acount %>"><%= a %></label></li>
                </ul>
                <% });%>
            <p>
                <input type="hidden" name="nonce" value="" />
                <input type="hidden" name="num" value="<%= num %>" />
                <input type="hidden" name="quizid" value="<%= quiz._id %>" />
                <input type="submit" id="submit" class="btn btn-primary" name="submit" value="Submit Answer" />
            </p>
        </form>
            <div id="finalscore">
            <h2 id="score"><%= score %></h2>
            <h2 class="userscore"></h2>
            <h3 id="time">Time Taken: </h3>
            </div>
        </div>
    </div>
</div><!--container-->
    <script src="/js/quiz/index.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<% include ../partials/footer %>
